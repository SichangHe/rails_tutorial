<% if comment.commenter and not comment.archived? %>
  <p>
    <em>
      <%= comment.commenter %>:
    </em>
  </p>
  <p>
    <%= comment.body %>
  </p>
  <p>
    <%= link_to 'Delete Comment', [comment.article, comment], data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure you want to delete this comment?'
    } %>
  </p>
<% end %>
