<h1>Articles</h1>
<p>
  <em>
    <%= Article.public_count%> public articles available
  </em>
</p>
<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>
<%= link_to 'New Article', new_article_path %>
