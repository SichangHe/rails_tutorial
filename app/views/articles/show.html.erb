<h1><%= @article.title %></h1>
<em><%= @article.author %></em>
<p><%= @article.body %></p>
<ul>
  <li>
    <%= link_to 'Edit', edit_article_path(@article) %>
  </li>
  <li>
    <%= link_to 'Destroy', article_path(@article), data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure you want to delete this?'
    } %>
  </li>
</ul>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
<h2>Comments</h2>
<%= render @article.comments %>
